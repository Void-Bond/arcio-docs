{
    "compilerOptions": {
        "target": "es2019",
        "module": "nodenext",
        "lib": [
            "es2015",
            "dom"
        ],
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "docs/**/*.ts",
        "docs/**/*.vue",
        "docs/**/*.md",
        "scripts/**/*.ts",
        ".vitepress/src/**/*.ts"
    ],
    "vueCompilerOptions": {
        "vitePressExtensions": [
            ".md"
        ]
    }
}